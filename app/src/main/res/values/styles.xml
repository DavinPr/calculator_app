<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#0F5076</item>
        <item name="colorPrimaryDark">#6ED8CC</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="arithmetic_button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:elevation">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/background_light</item>
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">75dp</item>
    </style>

    <style name="clear_button">
        <item name="android:background">@drawable/clear_background</item>
        <item name="android:elevation">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/background_light</item>
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">75dp</item>
    </style>

    <style name="result_button">
        <item name="android:background">@drawable/result_background</item>
        <item name="android:elevation">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/background_light</item>
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">75dp</item>
    </style>

</resources>
